// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    object          controlDict;
}

application     pimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.001;

writeControl    timeStep;

writeInterval   1;

writeFields     ( U p phi);

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

timeFormat      general;

timePrecision   8;

runTimeModifiable false;

adjustTimeStep  false;
//maxCo           0.5; // or another value you prefer

functions
{
    forceCoeffs
    {
        type            forceCoeffs;
        functionObjectLibs ("libforces.so");
        outputControl   timeStep;
        outputInterval  1;

        patches         (obstacle);
        rho             rhoInf;
        rhoInf          1;
        CofR            (0 0 0);
        liftDir         (0 1 0);
        dragDir         (1 0 0);
        pitchAxis       (0 0 1);
        magUInf         1.0;
        lRef            0.15;
        Aref            0.15;
    }
}


